<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smarthome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartHome">
        <activity android:name=".main.Room_screen"></activity>
        <activity android:name=".schemas.AddSchema_popup" />
        <activity android:name=".main.AddRoom_popup" />
        <activity android:name=".schemas.Schemas_screen" />
        <activity android:name=".settings.Settings_screen" />
        <activity android:name=".profile.Profile_screen" />
        <activity android:name=".registration.Registration_screen" />
        <activity android:name=".main.Main_screen" />
        <activity android:name=".login.Login_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>